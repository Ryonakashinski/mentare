{
  "rules": {
    ".read": "auth != null", // Allow read access to authenticated users
    ".write": "auth != null", // Allow write access to authenticated users
    
    "public_data": {
      ".read": true, // Allow read access to everyone (public data)
      ".write": "auth != null", // Allow write access to authenticated users
    },
    
    "private_data": {
      ".read": "auth != null", // Allow read access to authenticated users
      ".write": "auth.uid === $user_id", // Allow write access only to the owner of the data
    }
  }
}
